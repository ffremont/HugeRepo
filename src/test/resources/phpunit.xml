<?xml version="1.0"?>
<phpunit 
    colors="true" 
    bootstrap="../php/bootstrap.php"
    convertErrorsToExceptions="true"
    convertNoticesToExceptions="true"
    convertWarningsToExceptions="true"
    stopOnFailure="true"
>
    <testsuites>
        <testsuite>
            <directory suffix="Test.php" phpVersion="5.3.3" phpVersionOperator=">=">../php/</directory>
            <directory suffix="TestInteg.php" phpVersion="5.3.3" phpVersionOperator=">=">../php/</directory>
        </testsuite>
    </testsuites>
</phpunit>
